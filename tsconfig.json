		"outDir": "dist",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"typeRoots": [
			"./types",
			"node_modules/@types"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		".vscode",
		"types"
	],
}